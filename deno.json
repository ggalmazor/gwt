{
  "name": "@gwt/cli",
  "version": "1.0.0",
  "exports": "./main.ts",
  "imports": {
    "@cliffy/command": "jsr:@cliffy/command@^1.0.0-rc.7",
    "@cliffy/prompt": "jsr:@cliffy/prompt@^1.0.0-rc.7",
    "@cliffy/table": "jsr:@cliffy/table@^1.0.0-rc.7",
    "@std/path": "jsr:@std/path@^1.0.0",
    "@std/fs": "jsr:@std/fs@^1.0.0",
    "@std/assert": "jsr:@std/assert@^1.0.0"
  },
  "tasks": {
    "dev": "deno run --allow-run --allow-read --allow-write --allow-env main.ts",
    "test": "deno test --allow-run --allow-read --allow-write --allow-env",
    "test:watch": "deno test --allow-run --allow-read --allow-write --allow-env --watch",
    "compile": "deno compile --allow-run --allow-read --allow-write --allow-env --output=gwt main.ts",
    "compile:all": "deno task compile:mac && deno task compile:linux && deno task compile:windows",
    "compile:mac": "deno compile --target=aarch64-apple-darwin --allow-run --allow-read --allow-write --allow-env --output=dist/gwt-macos-arm64 main.ts",
    "compile:linux": "deno compile --target=x86_64-unknown-linux-gnu --allow-run --allow-read --allow-write --allow-env --output=dist/gwt-linux-x64 main.ts",
    "compile:windows": "deno compile --target=x86_64-pc-windows-msvc --allow-run --allow-read --allow-write --allow-env --output=dist/gwt-windows-x64.exe main.ts",
    "install": "deno run --allow-read --allow-write --allow-run --allow-env scripts/install.ts"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  }
}
